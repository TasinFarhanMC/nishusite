---
const { name, image, description, slug } = Astro.props;
---

<a href={`/products/${slug}`} class="card">
  <img src={image} alt={name} class="card-image" />
  <h2 class="card-title">{name}</h2>
  <p class="card-desc">{description}</p>
</a>

<style>
.card {
  display: block;
  border: 1px solid #ccc;
  border-radius: 8px;
  padding: 1rem;
  text-decoration: none;
  color: inherit;
  transition: transform 0.2s;
}
.card:hover {
  transform: scale(1.05);
}
.card-image {
  width: 100%;
  height: auto;
  border-radius: 4px;
}
.card-title {
  margin: 0.5rem 0 0;
}
.card-desc {
  font-size: 0.9rem;
  color: #555;
}
</style>

